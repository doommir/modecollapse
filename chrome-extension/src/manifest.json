{
  "manifest_version": 3,
  "name": "Lesson Lifter",
  "description": "Generate standards-aligned lesson assets from any page.",
  "version": "0.1.0",
  "permissions": ["storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["src/content.js"],
    "run_at": "document_end"
  }],
  "action": {
    "default_title": "Lift Lesson Assets",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
